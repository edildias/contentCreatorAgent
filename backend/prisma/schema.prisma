generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  passwordHash String
  role         Role     @default(USER)
  createdAt    DateTime @default(now())
  themes       Theme[]
  posts        Post[]
}

enum Role {
  USER
  ADMIN
}

model Theme {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  title       String
  description String
  objective   String
  format      String
  createdAt   DateTime @default(now())
  posts       Post[]
}

model Post {
  id             String     @id @default(cuid())
  user           User       @relation(fields: [userId], references: [id])
  userId         String
  theme          Theme      @relation(fields: [themeId], references: [id])
  themeId        String
  idea           String
  title          String
  text           String
  imageUrl       String?
  status         PostStatus @default(BACKLOG)
  scheduledAt    DateTime?
  publishNow     Boolean    @default(false)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  metrics        Metrics?
  automationLogs AutomationEvent[]
}

enum PostStatus {
  BACKLOG
  TO_REVIEW
  READY_TO_PUBLISH
  PUBLISHED
}

model Metrics {
  id          String   @id @default(cuid())
  post        Post     @relation(fields: [postId], references: [id])
  postId      String   @unique
  impressions Int      @default(0)
  engagement  Int      @default(0)
  leads       Int      @default(0)
  createdAt   DateTime @default(now())
}

model ThemePerformanceSnapshot {
  id          String   @id @default(cuid())
  theme       Theme    @relation(fields: [themeId], references: [id])
  themeId     String
  rangeStart  DateTime
  rangeEnd    DateTime
  impressions Int
  engagement  Int
  leads       Int
  postsCount  Int
  createdAt   DateTime @default(now())
}

model AutomationEvent {
  id        String   @id @default(cuid())
  post      Post     @relation(fields: [postId], references: [id])
  postId    String
  event     String
  payload   Json
  createdAt DateTime @default(now())
}
